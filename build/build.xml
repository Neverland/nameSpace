<?xml version="1.0" encoding="utf-8"?>
<project name="yuiCom" default="default" basedir=".">
	<dirname property="root.dir" file="${ant}"/>
	<property name="js.dir" location="${root.dir}/script"/>
	<property name="yui.path" location="${root.dir}/yui/yui.jar"/>
	<property name="min.dir" location="${root.dir}/min" />
	<property name="copyright" value="@2012" />

	<target name="default" depends="mikdir,conact,minify-js">
		<echo>${js.dir}/all-min.js</echo>
	</target>

	<target name="mikdir">
		<mkdir dir="${min.dir}/" />
	</target>

	<target name="conact" >
		<echo>123</echo>
		<concat destfile="${js.dir}/all.js">

			<path path="${js.dir}/toolkit.js" />
			<!--<path path="${js.dir}/module_workSpace.js"/>
			<path path="${js.dir}/module_clip.js"/>-->
			<path path="${js.dir}/module_tab.js" />
			<!--<path path="${js.dir}/module_accordion.js"/>-->

		</concat>
		<echo message="conact is completed:"> </echo>

	</target>

	<target name="minify-js" >
		<apply executable="java" dest="${js.dir}">
			<fileset dir="${js.dir}" includes="all.js"/>
				<arg line="-jar"/>
				<arg path="${yui.path}"/>
				<arg value="-o"/>
				<targetfile />
			<mapper type="glob" from="*.js" to="*-min.js"/>
		</apply>
		<echo message="minify is completed:"></echo>
		<move file="${js.dir}/all-min.js" todir="${min.dir}" />
		<delete file="${js.dir}/all.js" />
	</target>
</project>